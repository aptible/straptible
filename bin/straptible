#!/usr/bin/env ruby

begin
  require 'straptible'
rescue
  require 'rubygems'
  require 'straptible'
end

def usage(dest = $stdout)
  dest.puts 'Usage: straptible <flavor> <path> [options...]'
end

flavor = ARGV.shift
case flavor
when 'api'
  require File.join('straptible', 'rails', 'generators', 'api')
  Straptible::Rails::Generators::Api.start
when nil
  usage($stderr)
  exit 1
else
  $stderr.puts "Unknown flavor: #{flavor}"
  usage($stderr)
  exit 1
end
